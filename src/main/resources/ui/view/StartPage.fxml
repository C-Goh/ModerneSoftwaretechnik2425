<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<Pane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.softwaretechnik.spielekiste.ui.controller.StartPageController"
      style="-fx-background-color: #F57041;" prefWidth="600.0" prefHeight="400.0">

    <children>
        <VBox spacing="45.0" alignment="CENTER" layoutX="0.0" layoutY="0.0" prefWidth="600.0" prefHeight="400.0">
            <!-- Titelbereich -->
            <children>
                <Text fx:id="pageTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="Willkommen bei der Spielekiste!"
                      textAlignment="CENTER" style="-fx-fill: white;">
                    <font>
                        <Font size="40"/>
                    </font>
                </Text>
                <!-- Buttonbereich -->
                <HBox spacing="30.0" alignment="CENTER">
                    <children>
                        <!-- Erster Button -->
                        <Button fx:id="button1" onMouseClicked="#handleButtonClick"
                                style="-fx-background-color: transparent;">
                            <graphic>
                                <VBox alignment="CENTER" spacing="15.0">
                                    <children>
                                        <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="/Bildmaterial/Profilbild.png"/>
                                            </image>
                                        </ImageView>
                                        <Text fx:id="profileName1" text="Name1" textAlignment="CENTER"
                                              style="-fx-fill: white; -fx-font-weight: bold;">
                                            <font>
                                                <Font size="24.0"/>
                                            </font>
                                        </Text>
                                    </children>
                                </VBox>
                            </graphic>
                        </Button>
                        <!-- Zweiter Button -->
                        <Button fx:id="button2" onMouseClicked="#handleButtonClick"
                                style="-fx-background-color: transparent;">
                            <graphic>
                                <VBox alignment="CENTER" spacing="15.0">
                                    <children>
                                        <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="/Bildmaterial/Profilbild.png"/>
                                            </image>
                                        </ImageView>
                                        <Text fx:id="profileName2" text="Name2" textAlignment="CENTER"
                                              style="-fx-fill: white; -fx-font-weight: bold;">
                                            <font>
                                                <Font size="24.0"/>
                                            </font>
                                        </Text>
                                    </children>
                                </VBox>
                            </graphic>
                        </Button>
                        <!-- Dritter Button -->
                        <Button fx:id="button3" onMouseClicked="#handleButtonClick"
                                style="-fx-background-color: transparent;">
                            <graphic>
                                <VBox alignment="CENTER" spacing="15.0">
                                    <children>
                                        <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="/Bildmaterial/Profilbild.png"/>
                                            </image>
                                        </ImageView>
                                        <Text fx:id="profileName3" text="Name3" textAlignment="CENTER"
                                              style="-fx-fill: white; -fx-font-weight: bold;">
                                            <font>
                                                <Font size="24.0"/>
                                            </font>
                                        </Text>
                                    </children>
                                </VBox>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</Pane>
